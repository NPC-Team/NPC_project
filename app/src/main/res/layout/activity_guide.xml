<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true">

        <ImageView
            android:id="@+id/direction"
            android:layout_width="27dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
        android:id="@+id/routeNum"
        android:background="@color/jejuSKyBlue80"
        android:layout_width="1dp"
        android:layout_height="56dp"
        android:layout_weight="1"
        android:text="1." />

    <TextView
        android:id="@+id/routeText"
        android:background="@color/jejuGreen80"
        android:layout_width="253dp"
        android:layout_height="56dp"
        android:layout_weight="1"
        android:text="어디어디 길 왼쪽으로 꺽으시오" />

    <TextView
        android:id="@+id/routeDistance"
        android:background="@color/jejuGreen80"
        android:layout_width="wrap_content"
        android:layout_height="56dp"
        android:layout_weight="1"
        android:text="100m" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/distanceResult"
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:background="@color/jejuGreen80"
            android:text="몇m" />

        <TextView
            android:id="@+id/timeResult"
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            android:background="@color/jejuSKyBlue80"
            android:layout_weight="1"
            android:text="몇분" />
    </LinearLayout>



</RelativeLayout>
